<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextBig" parent="android:Theme.Holo.Light">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="LoginTitle1" parent="android:Theme.Holo.Light">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LoginTitle2" parent="android:Theme.Holo.Light">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="AppEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/gray_input_text</item>
