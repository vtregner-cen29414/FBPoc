<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextBig" parent="android:Theme.Holo.Light">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="LoginTitle1" parent="android:Theme.Holo.Light">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LoginTitle2" parent="android:Theme.Holo.Light">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>
    <style name="AppEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/white_edit_text</item>
        <item name="android:height">43dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_input_text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="AppEditText.GrayBorder">
        <item name="android:background">@drawable/white_edit_text_with_border</item>
    </style>

    <style name="RedButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_red_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>