<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/back_blue"
            >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cropToPadding="false"
                android:src="@drawable/account"
                android:baselineAlignBottom="false"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_logo1"
                android:layout_gravity="center_horizontal"
                style="@style/LoginTitle1"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_logo2"
                android:layout_gravity="center_horizontal"
                style="@style/LoginTitle2"
                />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginUsername"
                android:layout_gravity="center_horizontal"
                android:hint="@string/username"
                android:clickable="true"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="48dp"
                style="@style/AppEditText"
                />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/loginPassword"
                android:layout_gravity="center_horizontal"
                android:hint="@string/password"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                style="@style/AppEditText"/>

        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/RedButton"
                android:text="@string/login"
                android:id="@+id/btnLogin"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/for_white"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:onClick="onLogin"
                android:clickable="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loginHint"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/for_white"
                android:layout_marginTop="24dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loginHintLink"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:autoLink="web"
                android:linksClickable="true"/>


    </LinearLayout>

</ScrollView>